{
  "env": {
    "browser": true,
    "es6": true,
    "node":true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends":  [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "react/prop-types": [2, {"ignore": ["children", "match", "location", "history"]}],
    "brace-style": [
      "error",
      "1tbs",
      { "allowSingleLine": true }
    ],
    "space-before-blocks": "error",
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": "off",
    "prefer-const": [
      "error", 
      { "destructuring": "all" }
    ]    
  }
}